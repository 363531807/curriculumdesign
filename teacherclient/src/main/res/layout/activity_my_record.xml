<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

    >

<ImageView
    android:layout_width="110dp"
    android:layout_height="110dp" android:src="@drawable/icon"
    android:id="@+id/imageView2"
    android:layout_marginTop="50dp"
    android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent" android:layout_below="@+id/imageView2"
    android:layout_centerHorizontal="true" >
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_my_name"
                  android:text="我的名字"
                  android:gravity="center"
                  android:textColor="@android:color/primary_text_light"
                  android:textSize="25sp"
                  android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_my_title"
                  android:text="职称"
                  android:gravity="center"
                  android:textColor="@android:color/primary_text_light"
                  android:textSize="20sp"
                  android:layout_below="@+id/tv_my_name" android:layout_alignParentRight="true"
                  android:layout_alignParentEnd="true" android:layout_marginRight="100dp"
                  android:layout_marginEnd="74dp"/>

    </RelativeLayout>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/tv_my_sign"
              android:text="我的签名"
              android:gravity="center"
              android:textSize="20sp"
              android:textColor="@android:color/secondary_text_light"
        />
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="3"
                  android:textSize="20sp"
                  android:text="已上课程数："
            />
        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_course_total_num"
                  android:layout_weight="1"
                  android:textSize="20sp"
                  android:text="课程书"
            />
        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="3"
                  android:textSize="20sp"
                  android:text="未上课程数："
            />
        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_course_untotal_num"
                  android:layout_weight="1"
                  android:textSize="20sp"
                  android:text="课程书"
            />
    </LinearLayout>
    <RatingBar android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_course_total_rate"
                android:numStars="5"
                android:max="5"
                android:layout_gravity="center_horizontal"
                android:stepSize="0.1"
                android:isIndicator="true"
    />


</LinearLayout>
</RelativeLayout>
